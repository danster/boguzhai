<?xml version="1.0" encoding="utf-8"?>
<!-- 参考 Android中shape的使用：http://blog.csdn.net/ekeuy/article/details/12349853 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 填充的颜色 -->
    <solid android:color="#FFFFFF" />

    <!-- 边框的宽度和颜色 -->
    <stroke android:width="0.05dp" android:color="#ff878787" />

    <!-- android:radius 弧形的半径 -->
    <corners android:radius="1dip" />

    <padding
        android:bottom="0dp"
        android:left="2dp"
        android:right="0dp"
        android:top="0dp" />

</shape>