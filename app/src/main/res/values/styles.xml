<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- 常见的文字和图标式样 ************************************************ -->
    <style name="base_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="base_text" >
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="base_right_arrow">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/base_arrow_right_small</item>
    </style>
    
    <style name="base_right_clear">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/base_clear</item>
    </style>
    <!-- ************************************************ 常见的文字和图标式样 -->

    <!-- 条形栏的基本式样 -->
    <!-- 条形栏的基本式样 -->
    <style name="base_itembar">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="base_bar" parent="@style/base_itembar">
        <item name="android:background">@drawable/base_bar_selector</item>
    </style>

    <style name="main_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/main_tab_selector</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 条形栏间的分割线式样 -->
    <style name="longline">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/single_line</item>
    </style>

    <!-- 树形分割线式样 -->
    <style name="longline_vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:background">@color/single_line</item>
    </style>

    // 开关
    <style name="filter_switch">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:gravity">center|right</item>
        <item name="android:background">@drawable/base_choose_on</item>
    </style>

</resources>
