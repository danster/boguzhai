<resources>

    <style name="auction_status_tab">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/auction_tab_bg_selector</item>
        <item name="android:textColor">@color/auction_tab_selector</item>
    </style>

    <style name="auction_info_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="lot_info_text">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="lot_filter_spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="lot_filter_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="bidding_lot_info">
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#888</item>
    </style>

    <style name="bidding_record_text">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#888</item>
    </style>

    <style name="pay_left_image">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="pay_right_top_text">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="pay_right_bottom_text">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>


</resources>
