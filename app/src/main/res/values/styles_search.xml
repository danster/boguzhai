<resources>

    <style name="search_left_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="search_center_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|right</item>
    </style>

    <style name="search_right_arrow">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/base_arrow_right_small</item>
    </style>

    <style name="search_radio_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>


</resources>
