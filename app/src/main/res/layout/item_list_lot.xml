<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:paddingBottom="2dp"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/leftLot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center">
                <ImageView
                    android:layout_marginTop="3dp"
                    android:id="@+id/leftImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <TextView
                android:padding="5dp"
                android:id="@+id/leftLotName"
                style="@style/lot_info_text"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/dark_black"
                android:textSize="15sp"
                android:text=""/>
            <TextView
                android:id="@+id/leftLotID"
                android:paddingLeft="8dp"
                style="@style/lot_info_text"
                android:text="拍品号: "/>
            <TextView
                android:id="@+id/leftLotApprisal"
                android:paddingLeft="8dp"
                style="@style/lot_info_text"
                android:text="预估价: "/>
            <TextView
                android:id="@+id/leftLotStartPrice"
                android:paddingLeft="8dp"
                style="@style/lot_info_text"
                android:text="起拍价: "/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rightLot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:layout_marginLeft="3dp"
            android:background="@color/white"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center">
                <ImageView
                    android:layout_marginTop="3dp"
                    android:id="@+id/rightImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <TextView
                android:padding="5dp"
                android:id="@+id/rightLotName"
                style="@style/lot_info_text"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/dark_black"
                android:textSize="15sp"
                android:text=""/>
            <TextView
                android:paddingLeft="8dp"
                android:id="@+id/rightLotID"
                style="@style/lot_info_text"
                android:text="拍品号: "/>
            <TextView
                android:paddingLeft="8dp"
                android:id="@+id/rightLotApprisal"
                style="@style/lot_info_text"
                android:text="预估价: "/>
            <TextView
                android:paddingLeft="8dp"
                android:id="@+id/rightLotStartPrice"
                style="@style/lot_info_text"
                android:text="起拍价: "/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
