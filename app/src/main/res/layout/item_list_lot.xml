<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="1dp">

        <!--左边拍品-->
        <LinearLayout
            android:id="@+id/leftLot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="3dp"
            android:paddingBottom="5dp"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/leftImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <TextView
                android:id="@+id/leftLotName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/dark_black"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingBottom="2dp"/>
            <TextView
                android:id="@+id/leftLotID"
                style="@style/lot_info_text"
                android:text="图录号: "/>
            <TextView
                android:id="@+id/leftLotApprisal"
                style="@style/lot_info_text"
                android:text="预估价: "/>
            <TextView
                android:id="@+id/leftLotStartPrice"
                style="@style/lot_info_text"
                android:text="起拍价: "/>
        </LinearLayout>

        <!--右边拍品-->
        <LinearLayout
            android:id="@+id/rightLot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="3dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="1dp"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/rightImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <TextView
                android:id="@+id/rightLotName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/dark_black"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingBottom="2dp"/>
            <TextView
                android:id="@+id/rightLotID"
                style="@style/lot_info_text"
                android:text="图录号: "/>
            <TextView
                android:id="@+id/rightLotApprisal"
                style="@style/lot_info_text"
                android:text="预估价: "/>
            <TextView
                android:id="@+id/rightLotStartPrice"
                style="@style/lot_info_text"
                android:text="起拍价: "/>
        </LinearLayout>

</LinearLayout>