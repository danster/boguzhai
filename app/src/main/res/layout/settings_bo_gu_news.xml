<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/wv_bo_gu_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        style="@style/base_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <RadioGroup
            android:id="@+id/rg_bo_gu_news"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rb_bo_gu_news_1"
                android:textColor="@color/my_auction_tab_text_selector"
                android:button="@null"
                android:gravity="center_horizontal"
                android:text="公告"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb_bo_gu_news_2"
                android:textColor="@color/my_auction_tab_text_selector"
                android:button="@null"
                android:text="动态"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


            <RadioButton
                android:id="@+id/rb_bo_gu_news_3"
                android:textColor="@color/my_auction_tab_text_selector"
                android:button="@null"
                android:text="市场"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>


</LinearLayout>
