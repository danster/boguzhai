<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/base_bar" android:layout_marginTop="5dp">
        <TextView style="@style/base_text"
            android:layout_marginLeft="3dp"
            android:text="当前状态  "/>
        <TextView android:id="@+id/status"
            style="@style/myinfo_middle_text"
            android:textColor="#ff555555"
            android:text=""/>
    </LinearLayout>
    <View style="@style/longline"/>
    <LinearLayout style="@style/base_bar">
        <EditText style="@style/login_l_ev"
            android:id="@+id/mobile"
            android:hint="请输入新绑定手机"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" 获取验证码 "
            android:background="#ff751c20"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/get_check_code" />
    </LinearLayout>
    <View style="@style/longline"/>
    <LinearLayout style="@style/base_bar">
        <EditText style="@style/login_l_ev"
            android:id="@+id/check_code"
            android:hint="输入手机验证码"/>
        <ImageView style="@style/base_right_clear"
            android:id="@+id/check_code_clear"/>
    </LinearLayout>

    <LinearLayout style="@style/base_bar"
        android:layout_marginTop="10dp"
        android:background="@color/transparent">
        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#ff751c20"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="确 认"/>
    </LinearLayout>

</LinearLayout>
