<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        style="@style/base_bar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_circle_rectangle">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/base_search" />

            <EditText
                android:id="@+id/et_my_auction_keyword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center|left"
                android:hint="输入拍卖会名称"
                android:lines="1" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_my_auction_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_circle_rectangle_button"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        style="@style/base_bar" >

        <TextView
            style="@style/search_left_text"
            android:text="请选择拍卖形式 " />

        <Spinner
            android:id="@+id/sp_my_auction_choose"
            style="@style/lot_filter_spinner"></Spinner>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/base_arrow_right" />
    </LinearLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout_my_auction"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.boguzhai.logic.widget.XListView
            android:id="@+id/lv_myauctions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@drawable/shape_listview_divider"
            android:footerDividersEnabled="false" />

    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
