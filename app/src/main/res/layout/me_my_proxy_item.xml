<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 展示拍卖会专场信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_my_proxy"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <!--1-->


            <TextView
                android:id="@+id/tv_my_proxy_lot_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left"
                android:text="-------"
                android:textColor="@color/dark_black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_proxy_auction_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="----" />


                <TextView
                    android:id="@+id/tv_my_proxy_session_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:text="-----" />
            </LinearLayout>

            <!--2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="拍品号："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_my_proxy_lot_no"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="---"/>


            </LinearLayout>
            <!--3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="预估价："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_my_proxy_appraisal"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="---"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="起拍价："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_my_proxy_startprice"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="---"
                    android:textSize="15sp" />

            </LinearLayout>
            <!--4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="代理价："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_my_proxy_price"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="---"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <!--<TextView-->
                    <!--android:id="@+id/tv_my_proxy_change"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:background="@color/blue"-->
                    <!--android:gravity="center|left"-->
                    <!--android:text="修改"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="15sp" />-->

                <!--<View-->
                    <!--android:layout_width="15dp"-->
                    <!--android:layout_height="wrap_content" />-->

                <!--<TextView-->
                    <!--android:id="@+id/tv_my_proxy_delete"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:background="@color/blue"-->
                    <!--android:gravity="center|left"-->
                    <!--android:text="删除"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="15sp" />-->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
