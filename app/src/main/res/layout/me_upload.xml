<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/base_bar"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/base_text"
                android:layout_width="100dp"
                android:text="拍品名称" />

            <EditText
                android:id="@+id/me_upload_lot_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:hint="必填"
                android:maxLines="1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/me_upload_lot_name_delete"
                style="@style/base_right_clear" />
        </LinearLayout>

        <LinearLayout
            style="@style/base_bar"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/search_left_text"
                android:text="请选择分类一" />

            <Spinner
                android:id="@+id/me_upload_type1"
                style="@style/lot_filter_spinner"></Spinner>

            <ImageView style="@style/search_right_arrow" />
        </LinearLayout>

        <View style="@style/longline" />

        <LinearLayout style="@style/base_bar">

            <TextView
                style="@style/search_left_text"
                android:text="请选择分类二" />

            <Spinner
                android:id="@+id/me_upload_type2"
                style="@style/lot_filter_spinner"></Spinner>

            <ImageView style="@style/search_right_arrow" />
        </LinearLayout>

        <View style="@style/longline" />

        <LinearLayout style="@style/base_bar">

            <TextView
                style="@style/search_left_text"
                android:text="请选择分类三" />

            <Spinner
                android:id="@+id/me_upload_type3"
                style="@style/lot_filter_spinner"></Spinner>

            <ImageView style="@style/search_right_arrow" />
        </LinearLayout>


        <LinearLayout
            style="@style/base_bar"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/base_text"
                android:layout_width="100dp"
                android:text="底价" />

            <EditText
                android:id="@+id/me_upload_bottom_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:hint="必填"
                android:maxLines="1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/me_upload_bottom_price_delete"
                style="@style/base_right_clear" />
        </LinearLayout>

        <View style="@style/longline" />

        <LinearLayout style="@style/base_bar">

            <TextView
                style="@style/base_text"
                android:layout_width="100dp"
                android:text="佣金" />

            <TextView
                android:id="@+id/me_upload_commission"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:text="15%"
                android:textSize="15sp" />

        </LinearLayout>


        <View style="@style/longline" />

        <LinearLayout style="@style/base_bar">

            <TextView
                style="@style/base_text"
                android:layout_width="100dp"
                android:text="联系人" />

            <TextView
                android:id="@+id/me_upload_contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/longline" />

        <LinearLayout style="@style/base_bar">

            <TextView
                style="@style/base_text"
                android:layout_width="100dp"
                android:text="联系方式" />

            <TextView
                android:id="@+id/me_upload_contact_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/longline" />

        <LinearLayout style="@style/base_bar">

            <TextView
                style="@style/base_text"
                android:layout_width="100dp"
                android:text="年代" />

            <EditText
                android:id="@+id/me_upload_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:hint="选填"
                android:maxLines="1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/me_upload_time_delete"
                style="@style/base_right_clear" />
        </LinearLayout>

        <View style="@style/longline" />

        <LinearLayout style="@style/base_bar">

            <TextView
                style="@style/base_text"
                android:layout_width="100dp"
                android:text="形式" />

            <EditText
                android:id="@+id/me_upload_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:hint="选填"
                android:maxLines="1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/me_upload_style_delete"
                style="@style/base_right_clear" />
        </LinearLayout>

        <View style="@style/longline" />

        <LinearLayout style="@style/base_bar">

            <TextView
                style="@style/base_text"
                android:layout_width="100dp"
                android:text="尺寸" />

            <EditText
                android:id="@+id/me_upload_size"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:hint="选填"
                android:maxLines="1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/me_upload_size_delete"
                style="@style/base_right_clear" />
        </LinearLayout>

        <LinearLayout
            style="@style/base_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/me_upload_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="left"
                android:hint="请填写备注信息(必填)"
                android:maxLines="5" />
        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/me_upload_img1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/image_add" />

            <EditText
                android:id="@+id/me_upload_img1_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left"
                android:hint="在此添加图片描述"
                android:maxLines="5"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <View style="@style/longline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/me_upload_img2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/image_add" />

            <EditText
                android:id="@+id/me_upload_img2_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left"
                android:hint="在此添加图片描述"
                android:maxLines="5"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <View style="@style/longline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/me_upload_img3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/image_add" />

            <EditText
                android:id="@+id/me_upload_img3_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left"
                android:hint="在此添加图片描述"
                android:maxLines="5"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/me_upload_agree"
                style="@style/register_l_iv"
                android:textColor="@color/gold" />

            <TextView
                style="@style/base_text"
                android:text="已接受"
                android:textColor="@color/gold" />

            <TextView
                android:id="@+id/protocol"
                style="@style/register_ev"
                android:autoLink="web"
                android:text="在线拍品征集规则"
                android:textColor="@color/gold" />
        </LinearLayout>

        <Button
            android:id="@+id/me_upload_commit"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>


</ScrollView>
