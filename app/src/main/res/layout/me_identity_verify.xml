<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/base_bar"
            android:layout_marginTop="10dp">
            <TextView style="@style/verify_left_text"  android:text="姓名"/>
            <EditText android:id="@+id/name"
                style="@style/myinfo_middle_text"
                android:background="@color/transparent"
                android:hint="必填"/>
            <ImageView style="@style/myinfo_right_clear"
                android:id="@+id/my_name_clear"/>
        </LinearLayout>
        <View style="@style/longline"/>
        <LinearLayout style="@style/base_bar">
            <TextView style="@style/verify_left_text"  android:text="手机"/>
            <EditText style="@style/myinfo_middle_text"
                android:id="@+id/mobile"
                android:background="@color/transparent"
                android:hint="必填"/>/>
            <ImageView style="@style/myinfo_right_clear"
                android:id="@+id/my_mobile_clear"/>
        </LinearLayout>
        <View style="@style/longline"/>
        <LinearLayout style="@style/base_bar"
            android:id="@+id/my_property">
            <TextView style="@style/verify_left_text"  android:text="用户性质"/>
            <TextView style="@style/myinfo_middle_text"
                android:id="@+id/property"
                android:text="个人"/>/>
            <ImageView style="@style/myinfo_right_arrow" />
        </LinearLayout>

        <LinearLayout android:id="@+id/my_credential_type"
            style="@style/base_bar"
            android:layout_marginTop="10dp">
            <TextView style="@style/verify_left_text"  android:text="证件类型"/>
            <TextView style="@style/myinfo_middle_text"
                android:id="@+id/credential_type"
                android:text="个人"/>
            <ImageView style="@style/myinfo_right_arrow" />
        </LinearLayout>
        <View style="@style/longline"/>
        <LinearLayout style="@style/base_bar">
            <TextView style="@style/verify_left_text"  android:text="证件号码"/>
            <EditText style="@style/myinfo_middle_text"
                android:id="@+id/credential_number"
                android:background="@color/transparent"
                android:hint="必填"/>
            <ImageView style="@style/myinfo_right_clear"
                android:id="@+id/my_credential_number_clear"/>
        </LinearLayout>
        <View style="@style/longline"/>
        <LinearLayout style="@style/base_bar"
            android:layout_height="200dp"
            android:id="@+id/my_credential_image">
            <TextView style="@style/verify_left_text"
            android:singleLine="false"
            android:text="上传证件照片"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right">

                <ImageView
                    android:id="@+id/credential_image"
                    android:layout_height="180dp"
                    android:layout_width="180dp"
                    android:src="@drawable/image"/>

            </LinearLayout>
            <ImageView style="@style/myinfo_right_arrow"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

<Button
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/gold"
    android:id="@+id/submit"
    android:text="提交审查"/>

</LinearLayout>
