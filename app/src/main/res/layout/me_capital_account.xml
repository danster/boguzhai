<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/base_bar" android:layout_marginTop="10dp">
        <TextView style="@style/myinfo_left_text" android:layout_width="60dp"
            android:layout_margin="0dp" android:text="开户行"/>
        <TextView android:id="@+id/bank_name"
            style="@style/myinfo_middle_text"
            android:gravity="center|left"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <TextView android:id="@+id/bind_bank"
            style="@style/base_text"
            android:background="@drawable/shape_circle_rectangle_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <View style="@style/longline"/>
    <LinearLayout style="@style/base_bar">
        <TextView style="@style/myinfo_left_text"  android:layout_width="60dp"
            android:layout_margin="0dp" android:text="账号"/>
        <TextView android:id="@+id/bank_number" style="@style/myinfo_middle_text"
            android:gravity="center|left"
            android:textSize="17sp"/>
    </LinearLayout>

    <LinearLayout style="@style/base_bar"
        android:background="@color/transparent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:gravity="center|left">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="提示:    "/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/gray"
            android:text="为了资金安全银行卡户名必须与网站实名认证用户姓名一致"/>
    </LinearLayout>
    <LinearLayout style="@style/base_bar">
        <TextView style="@style/myinfo_left_text" android:layout_margin="0dp" android:text="户名"/>
        <TextView android:id="@+id/name" style="@style/myinfo_middle_text"/>
    </LinearLayout>

    <LinearLayout style="@style/base_bar"
        android:background="@color/transparent"
        android:gravity="center|left">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="资金信息"/>
        <TextView android:id="@+id/charge"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="充值"/>
        <TextView android:id="@+id/withdrawal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="提现"/>
    </LinearLayout>
    <LinearLayout style="@style/base_bar" android:id="@+id/my_balance">
        <TextView style="@style/myinfo_left_text" android:layout_margin="0dp" android:text="资金可用余额"/>
        <TextView android:id="@+id/balance" style="@style/myinfo_middle_text"/>
        <ImageView style="@style/myinfo_right_arrow"/>
    </LinearLayout>
    <View style="@style/longline"/>
    <LinearLayout style="@style/base_bar" android:id="@+id/my_bail">
        <TextView style="@style/myinfo_left_text" android:layout_margin="0dp" android:text="已交保证金"/>
        <TextView android:id="@+id/bail" style="@style/myinfo_middle_text"/>
        <ImageView style="@style/myinfo_right_arrow"/>
    </LinearLayout>

</LinearLayout>
