<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<LinearLayout style="@style/login_bar">
    <ImageView style="@style/register_l_iv"
        android:background="@drawable/sign_user"/>
    <EditText style="@style/register_ev"
        android:id="@+id/username"
        android:inputType="number"
        android:hint="手机"/>
</LinearLayout>

<LinearLayout style="@style/login_bar">
    <ImageView style="@style/register_l_iv"
        android:background="@drawable/sign_code"/>
    <EditText style="@style/register_ev"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:hint="密码"/>
</LinearLayout>


<LinearLayout style="@style/login_bar"  android:background="@color/transparent">
	<TextView style="@style/base_text"
	    android:id="@+id/register"
        android:layout_width="100dp"
	    android:textColor="@color/blue"
        android:textSize="16sp"
	    android:text="注  册" />
	<TextView 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
	<TextView style="@style/base_text"
	    android:id="@+id/forget_pwd"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="@color/blue"
	    android:text="忘记/修改密码" />
</LinearLayout>

    <LinearLayout style="@style/login_bar"
        android:background="@color/transparent">
        <TextView
            android:id="@+id/login"
            style="@style/submit"
            android:background="@drawable/shape_circle_rectangle_button"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="登录"/>
    </LinearLayout>

</LinearLayout>