<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff1f4f4">

        <RadioButton
            style="@style/main_tab"
            android:id="@+id/rb_1"
            android:drawableTop="@drawable/main_tab_home_selector"
            android:text="首页" />

        <RadioButton
            style="@style/main_tab"
            android:id="@+id/rb_2"
            android:drawableTop="@drawable/main_tab_auction_selector"
            android:text="拍卖大厅" />

        <RadioButton
            style="@style/main_tab"
            android:id="@+id/rb_3"
            android:drawableTop="@drawable/main_tab_search_selector"
            android:text="查询" />

        <RadioButton
            style="@style/main_tab"
            android:id="@+id/rb_4"
            android:drawableTop="@drawable/main_tab_me_selector"
            android:text="我" />

    </RadioGroup>
</LinearLayout>
