<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout style="@style/base_bar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/auction_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textSize="18sp"
            android:background="@color/transparent"
            android:hint="请输入拍卖会名称关键字"/>
    </LinearLayout>

    <LinearLayout style="@style/base_bar">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textSize="15sp"
            android:text="请选择预展开始时间"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/base_arrow_right_small"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:text="请选择预展结束时间"/>
    </LinearLayout>
    <View style="@style/longline" />
    <LinearLayout style="@style/base_bar">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textSize="15sp"
            android:text="请选择开拍开始时间"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/base_arrow_right_small"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:text="请选择开拍结束时间"/>
    </LinearLayout>

    <TextView style="@style/base_bar"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:textSize="18sp"
        android:text="请选择拍卖会状态"/>
    <View style="@style/longline" />
    <LinearLayout style="@style/base_bar"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/status_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            />
        <CheckBox
            android:id="@+id/status_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预展中"
            />
        <CheckBox
            android:id="@+id/status_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍卖中"
            />
        <CheckBox
            android:id="@+id/status_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已结束"
            />
    </LinearLayout>

    <TextView style="@style/base_bar"
        android:layout_marginTop="10dp"
        android:gravity="center|left"
        android:textSize="18sp"
        android:text="请选择拍卖方式"/>
    <View style="@style/longline" />
    <LinearLayout style="@style/base_bar"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/bid_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            />
        <CheckBox
            android:id="@+id/bid_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现场拍卖"
            />
        <CheckBox
            android:id="@+id/bid_both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同步拍卖"
            />
        <CheckBox
            android:id="@+id/bid_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络拍卖"
            />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gold"
        android:id="@+id/search"
        android:text="查询"/>

</LinearLayout>

