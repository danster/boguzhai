<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/base_bar"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/base_search" />

            <EditText
                android:id="@+id/et_my_collection_keyword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center|left"
                android:hint="输入拍品关键字查询"
                android:lines="1" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_my_collection_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确定" />

    </LinearLayout>

    <View style="@style/longline" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout_my_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.boguzhai.logic.view.XListView
            android:footerDividersEnabled="false"
            android:id="@+id/lv_my_collections"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
