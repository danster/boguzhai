<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/base_itembar" android:layout_marginTop="10dp">
        <TextView style="@style/myinfo_left_text"  android:text="充值金额:"/>
        <EditText style="@style/myinfo_middle_text" android:id="@+id/money"
            android:inputType="numberDecimal" android:hint="单位(元)"/>
        <ImageView style="@style/base_right_clear" android:layout_marginLeft="10dp"
            android:id="@+id/money_clear"/>
    </LinearLayout>

    <LinearLayout style="@style/base_itembar" android:background="@color/transparent"
        android:gravity="center|left">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="请选择充值方式"/>
    </LinearLayout>

   <LinearLayout style="@style/base_itembar"  android:layout_height="60dp" android:id="@+id/ly_unionpay">
        <ImageView style="@style/pay_left_image" android:background="@drawable/payment_bank"/>
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"  android:orientation="vertical">
            <TextView style="@style/pay_right_top_text"  android:text="银联支付"/>
            <TextView style="@style/pay_right_bottom_text" android:text="应用第三方支付系统，无需开通网银"/>
        </LinearLayout>
        <ImageView style="@style/base_right_clear" android:id="@+id/choose_unionpay" android:src="@drawable/choose_no"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button style="@style/submit"  android:id="@+id/submit"
        android:gravity="center"
        android:background="@color/dark_red"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="确认支付"/>
</LinearLayout>