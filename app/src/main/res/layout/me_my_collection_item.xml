<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 展示拍卖会专场信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_collection_lot_image"
            android:layout_gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <!--1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/my_collection_lot_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:text="-------"
                    android:textColor="@color/dark_black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/my_collection_lot_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/gold"
                    android:gravity="center|left"
                    android:text="-------"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <!--2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="拍  品  号:"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/my_collection_lot_no"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingLeft="15dp"
                    android:gravity="center|left"
                    android:text="---"
                    android:textSize="16sp" />

            </LinearLayout>
            <!--3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="预  估  价:"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/my_collection_lot_appraisal"
                    android:layout_width="wrap_content"
                    android:paddingLeft="15dp"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="---"
                    android:textSize="16sp" />


            </LinearLayout>
            <!--4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="起  拍  价:"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/my_collection_lot_startprice"
                    android:layout_width="wrap_content"
                    android:paddingLeft="15dp"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="---"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_my_collection_lot_dealprice"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="成  交  价:"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/my_collection_lot_dealprice"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingLeft="15dp"
                    android:gravity="center|left"
                    android:text="---"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="开拍时间:"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/my_collection_biddingTime"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:text="是否参拍:"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/my_collection_forBidding"
                    android:paddingLeft="15dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
